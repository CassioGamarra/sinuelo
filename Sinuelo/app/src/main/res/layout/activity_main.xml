<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SISTEMA DE GERENCIAMENTO DE REBANHOS"
        android:textSize="18sp"
        android:gravity="center"
        android:textFontWeight="700"
        android:textColor="#B06328" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnRegistro"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text=""
            android:textFontWeight="700"
            android:background="@drawable/registro"
            android:textSize="100sp"
            android:textColor="#4169e1"
            android:layout_marginRight="10dp"
            android:onClick="abrirRegistro"/>

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text=""
            android:textFontWeight="700"
            android:textSize="100sp"
            android:textColor="#4169e1"
            android:background="@drawable/search"
            android:layout_marginRight="10dp"
            android:onClick="abrirBusca"/>
        <Button
            android:id="@+id/btnAlertas"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text=""
            android:textFontWeight="700"
            android:background="@drawable/alertas"
            android:textSize="100sp"
            android:textColor="#4169e1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnBastao"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text=""
            android:textFontWeight="700"
            android:background="@drawable/bastao"
            android:textSize="100sp"
            android:textColor="#4169e1"
            android:layout_marginRight="10dp"
            android:onClick="gerenciarBastao"/>

        <Button
            android:id="@+id/btnConexao"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text=""
            android:textFontWeight="700"
            android:textSize="100sp"
            android:textColor="#4169e1"
            android:background="@drawable/conexao"
            android:layout_marginRight="10dp"
            android:onClick="conexoesBluetooh"/>
        <Button
            android:id="@+id/btnHistorico"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text=""
            android:textFontWeight="700"
            android:background="@drawable/historico"
            android:textSize="100sp"
            android:textColor="#4169e1" />
    </LinearLayout>
</LinearLayout>